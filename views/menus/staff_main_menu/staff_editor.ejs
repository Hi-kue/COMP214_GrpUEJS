<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head.ejs' { pageName: 'Staff Editor' }) %>
</head>

<body>
  <%- include('partials/nav.ejs') %>
  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
      <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
              <tr>
                  <th scope="col" class="px-6 py-3">STAFFNO</th>
                  <th scope="col" class="px-6 py-3">FULL NAME</th>
                  <th scope="col" class="px-6 py-3">POSITION</th>
                  <th scope="col" class="px-6 py-3">SEX</th>
                  <th scope="col" class="px-6 py-3"><span class="sr-only">Edit</span></th>
              </tr>
          </thead>
          <tbody>
              <% staff_list.forEach(function(staff) { %>
              <tr id="<%= staff[0] %>" class="<%= (staffno == staff[0]) ? 'current' : '' %>"
                  onclick="loadRecordFromDataTableToEditor('<%= JSON.stringify(staff) %>', '<%= JSON.stringify([6]) %>','<%= JSON.stringify({formatDateValue:[[6],{}]}) %>');">
                  <td class="px-6 py-4 whitespace-nowrap"><%= staff[0] %></td>
                  <td class="px-6 py-4 whitespace-nowrap"><%= staff[1] %> <%= staff[2] %></td>
                  <td class="px-6 py-4 whitespace-nowrap"><%= staff[3] %></td>
                  <td class="px-6 py-4 whitespace-nowrap"><%= staff[4] %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                      <a href="/staff-editor/<%= staff[0] %>" class="text-indigo-600 hover:text-indigo-900 hover:underline">Edit</a>
                  </td>
              </tr>
              <% }); %>
          </tbody>
      </table>
  </div>




  <%- include('partials/footer.ejs') %>  
</body>
</html>

